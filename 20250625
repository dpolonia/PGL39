    <script>
        // --- GLOBAL STATE & CONTROLS ---
        const sessionContainer = document.getElementById('session-container');
        const toolkitContainer = document.getElementById('toolkit-container');

        function showSessionView() {
            toolkitContainer.style.display = 'none';
            sessionContainer.style.display = 'block';
            window.scrollTo(0, 0);
        }

        function showToolkitView() {
            sessionContainer.style.display = 'none';
            toolkitContainer.style.display = 'block';
            showTab('prompts'); // Start on the first tab
            window.scrollTo(0, 0);
        }

        // --- SESSION-SPECIFIC SCRIPT ---
        let timeLeft = 75 * 60;
        let timerInterval;
        let isPaused = false;
        
        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            const timerEl = document.getElementById('timer');
            if(timerEl) {
                timerEl.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }
            if (timeLeft > 0 && !isPaused) {
                timeLeft--;
            }
        }
        
        function toggleTimer(event) {
            isPaused = !isPaused;
            if (event && event.target) {
                event.target.textContent = isPaused ? 'Retomar' : 'Pausar';
            }
        }
        
        function showModule(moduleNumber) {
            document.querySelectorAll('#session-container .module-content').forEach(module => module.classList.remove('active'));
            document.querySelectorAll('#session-container .module-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('#session-container .progress-step').forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index < moduleNumber - 1) step.classList.add('completed');
                else if (index === moduleNumber - 1) step.classList.add('active');
            });
            
            const activeModule = document.getElementById(`module${moduleNumber}`);
            if(activeModule) activeModule.classList.add('active');

            const activeBtn = document.querySelectorAll('#session-container .module-btn')[moduleNumber - 1];
            if(activeBtn) activeBtn.classList.add('active');
        }
        
        // --- TOOLKIT-SPECIFIC SCRIPT ---
        function showTab(tabName) {
            document.querySelectorAll('#toolkit-container .tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('#toolkit-container .tab-btn').forEach(btn => btn.classList.remove('active'));
            
            const activeTab = document.getElementById(tabName);
            if(activeTab) activeTab.classList.add('active');

            const tabIndex = ['prompts', 'guide', 'security', 'linkedin', 'champions'].indexOf(tabName);
            const activeBtn = document.querySelectorAll('#toolkit-container .tab-btn')[tabIndex];
            if(activeBtn) activeBtn.classList.add('active');
        }

        // --- SHARED SCRIPT ---
        function copyToClipboard(button) {
            const parentBox = button.parentElement;
            let textToCopy = '';

            if (parentBox.classList.contains('prompt-box')) {
                 textToCopy = parentBox.innerText.replace(/Copiar|Copiar Template/gi, '').trim();
            } else if (parentBox.classList.contains('prompt-card')) {
                const pElements = parentBox.querySelectorAll('p');
                textToCopy = Array.from(pElements).map(el => el.textContent).join('\n').trim();
            }

            if (textToCopy) {
                 navigator.clipboard.writeText(textToCopy).then(() => {
                    const originalText = button.textContent;
                    button.textContent = '‚úì Copiado!';
                    button.style.background = '#4caf50';
                    setTimeout(() => {
                        button.textContent = originalText;
                        button.style.background = '#2a5298';
                    }, 2000);
                }, () => {
                   // Fallback for browsers that don't support clipboard API well in iframes
                   alert('N√£o foi poss√≠vel copiar automaticamente. Por favor, selecione e copie o texto manualmente.');
                });
            }
        }
        
        function openAITool(tool) {
            const urls = {
                'chatgpt': 'https://chat.openai.com',
                'claude': 'https://claude.ai',
                'gemini': 'https://gemini.google.com'
            };
            if (urls[tool]) {
                window.open(urls[tool], '_blank');
            }
        }
        
        // --- INITIALIZATION & EVENT LISTENERS ---
        document.addEventListener('DOMContentLoaded', () => {
            // Start session timer
            timerInterval = setInterval(updateTimer, 1000);
            
            // Auto-save textarea content
            document.querySelectorAll('textarea').forEach(textarea => {
                const placeholder = textarea.getAttribute('placeholder');
                if(!placeholder) return;
                const savedKey = `ai-session-${placeholder.substring(0, 30)}`;
                const saved = localStorage.getItem(savedKey);
                if (saved) {
                    textarea.value = saved;
                }
                textarea.addEventListener('input', (e) => {
                    localStorage.setItem(savedKey, e.target.value);
                });
            });

            // Auto-save checklist state
            document.querySelectorAll('.checklist-item input[type="checkbox"]').forEach(checkbox => {
                const savedState = localStorage.getItem(`security-check-${checkbox.id}`);
                if (savedState === 'true') checkbox.checked = true;
                checkbox.addEventListener('change', () => {
                    localStorage.setItem(`security-check-${checkbox.id}`, checkbox.checked);
                });
            });
            
            // Keyboard shortcuts for modules
            document.addEventListener('keydown', (e) => {
                if (sessionContainer.style.display !== 'none' && e.key >= '1' && e.key <= '5') {
                    if (document.activeElement.tagName !== 'TEXTAREA') {
                        e.preventDefault();
                        showModule(parseInt(e.key));
                    }
                }
            });

            // Set initial views
            showSessionView();
        });
    </script>
</body>
</html>
